# CI script to run all the test commands

set -o errexit
set -o nounset
set -o pipefail

# cd to the repo root
REPO_ROOT=$(git rev-parse --show-toplevel)
cd "${REPO_ROOT}"

# Run go mod tidy in each go module
for module in $(find . -name "go.mod"); do
  dir="$(dirname ${module})"
  pushd "${dir}"
    go mod tidy
  popd
done
